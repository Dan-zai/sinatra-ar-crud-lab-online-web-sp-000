  <body>
    <h1>Articles</h1>
    <% if @articles.empty? %>
      <h3>no articles</h3>
    <% else %>
      <% @articles.each do |article| %>
        <p><%= article.title %> | <a href="/articles/<%= article.id %>/edit">edit</a></p>
      <% end %>
    <% end %> <br>
    <p><a href="/articles/new">Create an article</a></p>
  </body>